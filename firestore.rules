rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    match /products/{productId} {
      allow get, list, create, update, delete: if true;
    }
    match /users/{userId} {
      allow get, list, create, update, delete: if true;
    }
    match /sensorReadings/{readingId} {
      allow get, list, create, update, delete: if true;
    }
    match /users/{userId}/sensorConfigurations/{configId} {
      allow get, list, create, update, delete: if true;
    }
    match /users/{userId}/leakAnalyses/{analysisId} {
      allow get, list, create, update, delete: if true;
    }
    // fallback, falls noch andere Collections existieren:
    match /{document=**} {
      allow read, write: if true;
    }
  }
}
